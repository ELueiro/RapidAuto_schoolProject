@model RapidAuto.MVC.Models.Vehicule

@{
    ViewData["Title"] = "Create";
    var types = new SelectList(ViewBag.TypeDeVehicule);
}

<h1>Create</h1>

<h4>Vehicule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create"  method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Constructeur" class="control-label"></label>
                <input asp-for="Constructeur" class="form-control" />
                <span asp-validation-for="Constructeur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modele" class="control-label"></label>
                <input asp-for="Modele" class="form-control" />
                <span asp-validation-for="Modele" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnneeFabrication" class="control-label"></label>
                <input asp-for="AnneeFabrication" class="form-control" />
                <span asp-validation-for="AnneeFabrication" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label><br/>
                @*<input asp-for="Type" class="form-control" />*@
                <select asp-for="Type" asp-items="@types">
                 <option value="">Choisir le type de vehicule</option>
                </select>
               @* @Html.DropDownList("Type", new List<SelectListItem>
                           {
                           new SelectListItem{ Text="Hybride", Value = "Hybride" },
                           new SelectListItem{ Text="Essence", Value = "Essence" },
                           new SelectListItem{ Text="Électrique", Value = "Électrique" },
                             })*@
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NbSieges" class="control-label"></label>
                <input asp-for="NbSieges" class="form-control" />
                <span asp-validation-for="NbSieges" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Couleur" class="control-label"></label>
                <input asp-for="Couleur" class="form-control" />
                <span asp-validation-for="Couleur" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Dispo" /> @Html.DisplayNameFor(model => model.Dispo)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Prix" class="control-label"></label>
                <input asp-for="Prix" class="form-control" />
                <span asp-validation-for="Prix" class="text-danger"></span>
            </div>

            <div class="form-group">
                
                <label class="control-label">Ajouter une image</label>
                <input type="file" name="image1" class="form-control" />  
                <p class="text-danger">@ViewBag.ErrorMessage</p>
            </div>

             <div class="form-group">
                
                <label class="control-label">Ajouter une image</label>
                <input type="file" name="image2" class="form-control" />  
                <p class="text-danger">@ViewBag.ErrorMessage</p>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
